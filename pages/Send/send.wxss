page{
	min-height:100%;
	width:100%;
	background:#f2f2f2;

}
.send_bg{
	width:100%;
}
.send_bg image{
	width:100%;
	height:350rpx;
}
.send_cont{
	padding:0rpx 20rpx;
	margin-top:10rpx;
	overflow:hidden;
	background:#fff;
}
.send_content{
	overflow:hidden;
}
.send_btn{
	width:100%;
	height:80rpx;
	background:#00c6f7;
	color:#fff;
	border-radius:10rpx;
	line-height:80rpx;
	text-align:center;
	margin-top:20rpx;
}
.send_list{
	width:100%;

}
.serder{
	background:#fff;
}
.send_user{
	width:100%;
	display:flex;
	justify-content:center;
	height:90rpx;
	align-items:center;
	padding:32rpx 0;
	overflow:hidden;
}
.sender_left{
	width:50%;
	display:flex;
	align-items:center;
	height:90rpx;
	color:#262626;
	overflow:hidden;
}
.sender_left image{
	width:90rpx;
	height:90rpx;
	margin-right:32rpx;
}
.send_time{
	width:50%;
	text-align:right;
	color:#666;
}
.sender_bank{
	width:56rpx;
	height:28rpx;
	border-radius:10rpx;
	background:#ffc402;
	color:#fff;
	text-align:center;
	margin-left:10rpx;
}
.send_desp{
	color:#333;
}
.send_imageItem{
	width:33.33%;
	text-align:center;
}
.send_image{
	display:flex;
	overflow:hidden;
	margin:40rpx 0 20rpx;
	flex-wrap:wrap;
}
.send_imageItem image{
	width:224rpx;
	height:158rpx;
	border-radius:20rpx;
}
.great{
	width:145rpx;
	height:60rpx;
	border:solid 1px #00c6f7;
	border-radius:10rpx;
	align-items:center;
	justify-content:center;
	display:flex;
	margin-bottom:30rpx;
}
.great_img image{
	width:39rpx;
	height:38rpx;
	margin-right:20rpx;
}
.great_txt{
	color:#666;
}
.serder{
	margin-bottom:20rpx;
	padding:0px 20rpx 20rpx;
}
#send{
	margin-bottom:120rpx;
}
#send_button image{
	width:54rpx;
	height:54rpx;
}
#send_button{
	position:fixed;
	right:0;
	top:40%;
	width:124rpx;
	height:124rpx;
	background:#00c6f7;
	border-radius:50%;
	text-align:center;
	align-items:center;
}
#send_img{
	height:50%;

}
#send_img{
	margin-top:12rpx;
}
#sent_txt{
	height:40%;

	color:#fff;
}